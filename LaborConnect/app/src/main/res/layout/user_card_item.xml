<?xml version="1.0" encoding="utf-8"?><!-- XML implementation of Card Layout -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:padding="10dp"
    app:cardElevation="5dp">

    <TableLayout
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402"
        >


    <TableRow


        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Title "
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Text "
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>
    <TableRow


        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Description"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Text 2"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>

    <TableRow


        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Timespan"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/timespan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Text 2"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>

    <TableRow


        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Address"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dip"
            android:text="Text 2"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>

        <TableRow


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accepted"
            android:visibility="gone"
            >


            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Accepted By"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/acceptedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Text 2"
                android:textColor="#000"
                android:textSize="14dp" />

        </TableRow>

        <TableRow


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:visibility="gone"
            >


            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Contact"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/workerContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Text 2"
                android:textColor="#000"
                android:textSize="14dp" />

        </TableRow>





        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:backgroundTint="#EA1E1E"
            android:text="@string/delete_request"
            android:layout_gravity="center"
            android:visibility="gone"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"

            />
    </TableLayout>






</androidx.cardview.widget.CardView>